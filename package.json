{
    "name": "portfolio",
    "version": "0.1.0",
    "description": "Personal portfolio website built with Next.js, React, and TailwindCSS",
    "private": true,
    "scripts": {
        "dev": "next dev --turbo",
        "build": "next build",
        "build:analyze": "ANALYZE=true next build",
        "start": "next start",
        "lint": "next lint",
        "lint:fix": "next lint --fix",
        "format": "prettier --write .",
        "format:check": "prettier --check .",
        "type-check": "tsc --noEmit",
        "clean": "rm -rf .next out dist",
        "prepare": "npm run format && npm run lint:fix && npm run type-check"
    },
    "dependencies": {
        "@radix-ui/react-slot": "^1.1.0",
        "class-variance-authority": "^0.7.0",
        "clsx": "^2.1.1",
        "lucide-react": "^0.438.0",
        "next": "14.2.26",
        "react": "^18",
        "react-dom": "^18",
        "react-youtube": "^10.1.0",
        "tailwind-merge": "^2.5.2",
        "tailwindcss-animate": "^1.0.7"
    },
    "devDependencies": {
        "@stagewise-plugins/react": "^0.5.0",
        "@stagewise/toolbar-next": "^0.5.0",
        "@types/node": "^20",
        "@types/react": "^18",
        "@types/react-dom": "^18",

        "eslint": "^8",
        "eslint-config-next": "^15.1.6",
        "postcss": "^8",
        "prettier": "^3.3.3",
        "prettier-plugin-tailwindcss": "^0.6.13",
        "tailwindcss": "^3.4.1",
        "typescript": "^5"
    }
}
